# Database
DATABASE_URL=sqlite:///./sota_practices.db
REDIS_URL=redis://localhost:6379

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Security
API_KEY=your_api_key_here
SECRET_KEY=your_secret_key_here

# Monitoring
ENABLE_METRICS=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Scraping Configuration
SCRAPING_INTERVAL_HOURS=6
MAX_POSTS_PER_SCRAPE=100
SCRAPE_DELAY_SECONDS=2  # Polite delay between requests

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# LLM Processing
LLM_PROVIDER=local  # Options: local, openrouter
LLM_PROCESSING_ENABLED=true

# OpenRouter (if using cloud LLM)
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_MODEL=anthropic/claude-3-haiku

# Local LLM (Ollama or LM Studio)
LOCAL_LLM_URL=http://localhost:11434  # Ollama default, use http://localhost:1234 for LM Studio
LOCAL_LLM_MODEL=llama3  # Model name (ignored by LM Studio)
LOCAL_LLM_TYPE=ollama  # Options: ollama, lmstudio

# LLM Character Limits (for better UX than token counts)
LLM_MAX_CHARS=4000  # Maximum characters to send to LLM (user-friendly limit)
LLM_CHAR_HARD_LIMIT=50000  # Absolute safety limit

# GitHub Token (for GitHub repo scraping)
GITHUB_TOKEN=your_github_token_optional